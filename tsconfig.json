{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "utils": ["functions"],
      "*": ["node_modules/*", "types/*"]
    },
    "typeRoots": [
      "types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "types/*"
  ],
  "exclude": [
    "node_modules",
    "<node_internals>/**",
    "bin/**"
  ]
}